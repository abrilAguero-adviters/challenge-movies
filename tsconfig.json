{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",

    "paths": {
      "@/components/*": ["components/*"],
      "@/common/*": ["common/*"],
      "@/constants/*": ["constants/*"],
      "@/services/*": ["services/*"],
      "@/context/*": ["context/*"],
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["utils/*"],
      "@/__mock__/*": ["__mock__/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src", "vite-env.d.ts", "*.d.ts"]
}
